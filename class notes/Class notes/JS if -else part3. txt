 //FINDING IF A NUMBER IS EVEN OR ODD WITHOUT A FUNCTION

let num = Math.floor(Math.random() * 10); // 

 if(num % 2 ===0) {
    console.log('EVEN');
 }
 else {
    console.log('ODD');
 }


 //FINDING IF A NUMBER IS EVEN OR ODD with A FUNCTION

 function evenOdd(num) {
 if(num % 2 ===0) {
     return 'EVEN';
 }
 else {
    return 'ODD';
  }
 }

